{
  "manifest_version": 3,
  "name": "Git Voucher",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"]
}
